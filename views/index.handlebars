<h1 class="text">Burgers!</h1>
<div class="container">
  <div class="row">
    <div class="col-md">
      <h2>Burgers to Be Eaten!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devour}}
            {{> burgers/burgers_block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

 
  <div class="col-md">
      <h2>Burgers that have been eaten!</h2>

      <ul>
        {{#each burgers}}
          {{#if devour}}
            {{> burgers/burgers_block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
  </div>
  </div>
</div>


<div class="radio-display">
  <h2 class="text">Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">burger Name:</label>
      <input type="text" id="ca" name="name" >
    </div>

    <div class="form-group devour-radio">
      <label for="slee">devour?</label><br>
      <input type="radio" name="devour" value="1" checked> eaten!<br>
      <input type="radio" name="devour" value="0"> edible
    </div>

    <button type="submit">Add burger</button>
  </form>
</div>